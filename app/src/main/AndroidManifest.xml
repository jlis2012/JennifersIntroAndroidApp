<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jennifersintroapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TakePictureActivity"
            android:label="TakePictureActivity"/>

        <activity
            android:name=".SongActivity"
            android:label="SongActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".InformationResultsActivity"
            android:label="InformationResultsActivity"/>

        <activity android:name=".InformationPageActivity"
            android:label="InformationPageActivity"/>

        <activity android:name=".TicTacToeActivity"
            android:label="TicTacToeActivity"/>

        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WeatherActivity"
            android:label="WeatherActivity"/>

        <activity android:name=".MyDrawing"
            android:label="MyDrawingActivity" />

    </application>

</manifest>